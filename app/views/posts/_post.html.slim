div data-controller="post" data-post-id-value=post.id
  .card.post id=dom_id(post)
    .card-body
      div id="#{dom_id(post)}_body"
        .card-title = link_to post.title, post
        .card-text
          == post.body
    .card-footer.d-flex.justify-content-between
      div.pt-2
        - if post.user.present?
          i.bi.bi-person
          '
          = link_to post.user.full_name, post.user
        i.bi.bi-clock.ps-3
        '
        = post.created_at.strftime("%d %B, %Y %H:%M")
      .text-end
        - if policy(post).edit?
          = link_to t('action.edit'), edit_post_path(post), class: "card-link btn btn-link"
        - if policy(post).destroy?
          = link_to  post, data: {"turbo-method": :delete, controller: "confirmation", action: "confirmation#click", confirm: "Are tou sure you want to delete this post?" }, class: "card-link btn btn-outline-danger" do
            i.bi.bi-trash
            '
            = t('action.delete')

